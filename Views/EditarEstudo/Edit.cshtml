@model LucasVaz.Models.Estudo

@{
    ViewData["Title"] = "Editar Estudo";
}
<html>
<body>
    <h1 class="display-4">Editar Estudo</h1>
    <div style="display: flex; height: 100vh; align-items: center; justify-content: center;">
        <div class="cardgeral" style="width: 80%; max-width: 1000px;">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="IdEstudo" />

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="DsEstudo"><i class="fas fa-book"></i> Descrição do Estudo:</label>
                            <input asp-for="DsEstudo" class="form-control" />
                            <span asp-validation-for="DsEstudo" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="DsLocal"><i class="fas fa-map-marker-alt"></i> Local do Estudo:</label>
                            <input asp-for="DsLocal" class="form-control" />
                            <span asp-validation-for="DsLocal" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="DtEstudo"><i class="fas fa-calendar-alt"></i> Data do Estudo:</label>
                            <input asp-for="DtEstudo" type="date" class="form-control" />
                            <span asp-validation-for="DtEstudo" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="TipoEstudo.IdTipoEstudo"><i class="fas fa-id-badge"></i> ID do Tipo de Estudo:</label>
                            <input asp-for="TipoEstudo.IdTipoEstudo" type="number" class="form-control" />
                            <span asp-validation-for="TipoEstudo.IdTipoEstudo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-4 pb-4 text-center">
                        <button type="submit" class="transparent-button"><i class="fas fa-save"></i> Salvar Alterações</button>
                        <a asp-action="Index" class="transparent-button"><i class="fas fa-arrow-left"></i> Cancelar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</body>
</html>
