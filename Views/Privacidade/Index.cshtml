@model IEnumerable<Privacidade>


@{
    ViewData["Title"] = "Politica de Privacidade";
}
<html>
<body>
    <div id="estrelas">
        <h1 class="display-4">Política de Privacidade</h1>
        <p>Última atualização: @(Model.Any() ? Model.Last().DtPrivacidade.ToString("dd/MM/yyyy") : "Não disponível")</p>
@foreach (var item in Model)
{
    <h2>@item.DsTitulo</h2>
    <p>@item.DsTexto</p>
}
        @for (int i = 0; i < 150; i++)
        {
            <div class="estrela" style="top: @(new Random().Next(0, 100))vh; left: @(new Random().Next(0, 100))vw; animation-delay: @(new Random().Next(1, 10))s;"></div>
        }
    </div>
</body>
</html>
