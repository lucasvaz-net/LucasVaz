@model LucasVaz.Models.Pessoa

@{
    ViewData["Title"] = "Sobre Mim";
}
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
</head>
<body>

        <h1 style="margin-top:50px">Sobre Mim</h1>
    <p style="margin-top:50px">@Model.DsSobreMim</p>
        <div id="button-container" style="display: flex; justify-content: center; align-items: center;">
            <a asp-controller="Experiencia" asp-action="Index" class="transparent-button">Vamos Continuar</a>
            </div>
        @for (int i = 0; i < 300; i++)
        {
            <div class="estrela" style="top: @(new Random().Next(0, 100))vh; left: @(new Random().Next(0, 100))vw; animation-delay: @(new Random().Next(1, 10))s;"></div>
        }

</body>
</html>
