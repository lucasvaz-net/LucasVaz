@model LucasVaz.Models.Pessoa

@{
    ViewData["Title"] = "Editar Pessoa";
}
<html>

<body>
    <h1 class="display-4">Editar Dados</h1>
    <div style="display: flex; height: 100vh; align-items: center; justify-content: center; margin-top:70px;">
        <div class="cardgeral" style="width: 80%; max-width: 1000px;">


            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-times-circle"></i> @TempData["ErrorMessage"]
                </div>
            }

            <div class="card-body">
                <form asp-action="Index" asp-controller="EditarPessoa" method="post">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="DsPessoa"><i class="fas fa-user"></i> Nome:</label>
                            <input type="text" id="DsPessoa" name="DsPessoa" class="form-control" value="@Model.DsPessoa" required />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="CdCpfCnpj"><i class="fas fa-id-card"></i> CPF/CNPJ:</label>
                            <input type="text" id="CdCpfCnpj" name="CdCpfCnpj" class="form-control" value="@Model.CdCpfCnpj" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="DsLogin"><i class="fas fa-sign-in-alt"></i> Login:</label>
                            <input type="text" id="DsLogin" name="DsLogin" class="form-control" value="@Model.DsLogin" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="DsSenha"><i class="fas fa-lock"></i> Senha:</label>
                            <input type="password" id="DsSenha" name="DsSenha" class="form-control" value="@Model.DsSenha" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="DtNascimento"><i class="fas fa-calendar-alt"></i> Data de Nascimento:</label>
                            <input type="date" id="DtNascimento" name="DtNascimento" class="form-control" value="@(Model.DtNascimento.HasValue ? Model.DtNascimento.Value.ToString("yyyy-MM-dd") : string.Empty)" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="TpPessoa"><i class="fas fa-users"></i> Tipo de Pessoa:</label>
                            <select id="TpPessoa" name="TpPessoa" class="form-control">
                                @if (Model.TpPessoa == "F")
                                {
                                    <option value="F" selected>Física</option>
                                    <option value="J">Jurídica</option>
                                }
                                else
                                {
                                    <option value="F">Física</option>
                                    <option value="J" selected>Jurídica</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="DsSobreMim"><i class="fas fa-info-circle"></i> Sobre Mim:</label>
                            <textarea id="DsSobreMim" name="DsSobreMim" class="form-control" rows="5">@Model.DsSobreMim</textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="DsInicio"><i class="fas fa-home"></i> Início:</label>
                            <textarea id="DsInicio" name="DsInicio" class="form-control" rows="5">@Model.DsInicio</textarea>
                        </div>
                    </div>
                    <div class="mt-4 pb-4 text-center">
                        <button type="submit" class="transparent-button"><i class="fas fa-save"></i> Atualizar</button>
                        <a asp-controller="Login" asp-action="Home" class="transparent-button"><i class="fas fa-arrow-left"></i> Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </body>
</html>