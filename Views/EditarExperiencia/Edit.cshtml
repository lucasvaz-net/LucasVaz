@model LucasVaz.Models.Experiencia

@{
    ViewData["Title"] = "Editar Experiência";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdExperiencia" />

    <div class="form-group">
        <label asp-for="DsExperiencia">Descrição da Experiência:</label>
        <input asp-for="DsExperiencia" class="form-control" />
        <span asp-validation-for="DsExperiencia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DsFuncao">Função:</label>
        <input asp-for="DsFuncao" class="form-control" />
        <span asp-validation-for="DsFuncao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DsLocal">Local:</label>
        <input asp-for="DsLocal" class="form-control" />
        <span asp-validation-for="DsLocal" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DtIni">Data de Início:</label>
        <input asp-for="DtIni" type="date" class="form-control" />
        <span asp-validation-for="DtIni" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DtFim">Data de Término:</label>
        <input asp-for="DtFim" type="date" class="form-control" />
        <span asp-validation-for="DtFim" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoExperiencia.IdTipoExperiencia">ID do Tipo de Experiência:</label>
        <input asp-for="TipoExperiencia.IdTipoExperiencia" type="number" class="form-control" />
        <span asp-validation-for="TipoExperiencia.IdTipoExperiencia" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
