@model LucasVaz.Models.Experiencia
@{
    ViewData["Title"] = "Inserir Experiência";
}
<html>
<body>
    <h1 class="display-4">Inserir Experiência</h1>
    <div style="display: flex; height: 100vh; align-items: center; justify-content: center;">
        <div class="cardgeral" style="width: 80%; max-width: 1000px;">
            <div class="card-body">
                <form asp-action="Create" method="post" class="custom-form">

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="DsExperiencia"><i class="fas fa-clipboard"></i> Descrição da Experiência:</label>
                            <input type="text" class="form-control" id="DsExperiencia" name="DsExperiencia" required />
                        </div>

                        <div class="form-group col-md-6">
                            <label for="DsFuncao"><i class="fas fa-user-tag"></i> Função:</label>
                            <input type="text" class="form-control" id="DsFuncao" name="DsFuncao" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="DsLocal"><i class="fas fa-map-marker-alt"></i> Local da Experiência:</label>
                            <input type="text" class="form-control" id="DsLocal" name="DsLocal" required />
                        </div>

                        <div class="form-group col-md-6">
                            <label for="DtIni"><i class="fas fa-calendar-check"></i> Data de Início:</label>
                            <input type="date" class="form-control" id="DtIni" name="DtIni" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="DtFim"><i class="fas fa-calendar-times"></i> Data de Fim:</label>
                            <input type="date" class="form-control" id="DtFim" name="DtFim" />
                        </div>

                        <div class="form-group col-md-6">
                            <label for="TipoExperiencia.IdTipoExperiencia"><i class="fas fa-id-badge"></i> ID do Tipo da Experiência:</label>
                            <input type="number" class="form-control" id="TipoExperiencia.IdTipoExperiencia" name="TipoExperiencia.IdTipoExperiencia" required />
                        </div>
                    </div>

                    <div class="mt-4 pb-4 text-center">
                        <button type="submit" class="transparent-button"><i class="fas fa-plus"></i> Criar</button>
                        <a asp-action="Index" class="transparent-button"><i class="fas fa-arrow-left"></i> Cancelar</a>
                    </div>
                </form>


            </div>
        </div>
    </div>
</body>
</html>
