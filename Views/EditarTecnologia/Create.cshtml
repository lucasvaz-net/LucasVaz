@model LucasVaz.Models.Tecnologia
@{
    ViewData["Title"] = "Inserir Tecnologia";
}
<html>
<body>
    <h1 class="display-4">Inserir Tecnologia</h1>
    <div style="display: flex; height: 100vh; align-items: center; justify-content: center;">
        <div class="cardgeral" style="width: 80%; max-width: 1000px;">
            <div class="card-body">
                <form asp-action="Create" method="post" class="custom-form">

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="DsTecnologia"><i class="fas fa-microchip"></i> Descrição da Tecnologia:</label>
                            <input type="text" class="form-control" id="DsTecnologia" name="DsTecnologia" required />
                        </div>

                        <div class="form-group col-md-6">
                            <label for="QtHabilidade"><i class="fas fa-chart-line"></i> Nível de Habilidade:</label>
                            <input type="number" class="form-control" id="QtHabilidade" name="QtHabilidade" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="TipoTecnologia.IdTipoTecnologia"><i class="fas fa-id-badge"></i> ID do Tipo da Tecnologia:</label>
                            <input type="number" class="form-control" id="TipoTecnologia.IdTipoTecnologia" name="TipoTecnologia.IdTipoTecnologia" required />
                        </div>
                    </div>

                    <div class="mt-4 pb-4 text-center">
                        <button type="submit" class="transparent-button"><i class="fas fa-plus"></i> Criar</button>
                        <a asp-action="Index" class="transparent-button"><i class="fas fa-arrow-left"></i> Cancelar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</body>
</html>
