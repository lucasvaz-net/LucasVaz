@model LucasVaz.Models.Tecnologia

@{
    ViewData["Title"] = "Editar Tecnologia";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdTecnologia" />

    <div class="form-group">
        <label asp-for="DsTecnologia">Descrição da Tecnologia:</label>
        <input asp-for="DsTecnologia" class="form-control" />
        <span asp-validation-for="DsTecnologia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoTecnologia.IdTipoTecnologia">ID do Tipo de Tecnologia:</label>
        <input asp-for="TipoTecnologia.IdTipoTecnologia" type="number" class="form-control" />
        <span asp-validation-for="TipoTecnologia.IdTipoTecnologia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QtHabilidade">Quantidade de Habilidade:</label>
        <input asp-for="QtHabilidade" type="number" class="form-control" />
        <span asp-validation-for="QtHabilidade" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
