@model List<LucasVaz.Models.Tecnologia>

<html>
<body>
    <div class="container mt-4">
        <h1>Tecnologias</h1>
        <div>
            <a asp-controller="EditarTecnologia" asp-action="Create" class="transparent-button mb-3 mt-4">
                <i class="fas fa-plus"></i> Nova Tecnologia
            </a>

            <div class="table-responsive mt-4">
                <table class="table" style="color:black;  border-color:black;">
                    <thead>
                        <tr>
                            <th>Tecnologia</th>
                            <th>Tipo</th>
                            <th>Ícone</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tecnologia in Model)
                        {
                            <tr>
                                <td>@tecnologia.DsTecnologia</td>
                                <td>@tecnologia.TipoTecnologia.DsTipoTecnologia</td>
                                <td>
                                    <img src="~/img/@(tecnologia.DsTecnologia).svg" alt="@tecnologia.DsTecnologia" width="32" height="32" />
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@tecnologia.IdTecnologia" class="transparent-button">
                                        <i class="fas fa-pencil-alt"></i> Editar
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-4 pb-4" id="button-container" style="width:65vh">
                <a asp-controller="Login" asp-action="Home" class="transparent-button">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>

            </div>
        </div>
    </div>
</body>
</html>
