@{
    ViewData["Title"] = "Home";
}
<html>
<head>
    <meta charset="UTF-8">
    <style>
        .navbar {
            box-shadow: none;
            border: none;
        }

        .navbar-light .navbar-brand,
        .navbar-light .navbar-nav .nav-link {
            color: white; /* Preto com um pouco de transparência. Ajuste conforme necessário. */
        }

        .navbar-light .navbar-toggler-icon {
            background-color: rgba(0, 0, 0, 0.9); /* Preto com um pouco de transparência. Ajuste conforme necessário. */
        }

        .navbar-toggler {
            border-color: rgba(0, 0, 0, 0.3); /* Borda do botão de colapso */
        }

        /* Estilo para o botão de logout para se parecer com um link */
        .btn-link {
            border: none;
            background-color: transparent;
            color: red;
        }

            .btn-link:hover {
                text-decoration: underline;
                background-color: transparent;
            }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="EditarPessoa" asp-action="Index">Editar Pessoa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="EditarExperiencia" asp-action="Index">Editar Experiências</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="EditarProjeto" asp-action="Index">Editar Projetos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="EditarTecnologia" asp-action="Index">Editar Tecnologia</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="EditarEstudo" asp-action="Index">Editar Estudos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="EditarContato" asp-action="Index">Editar Contatos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="EditarPrivacidade" asp-action="Index">Editar Política de Privacidade</a>
                </li>
                <li class="nav-item">
                    <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link nav-link">Logout</button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>
</body>
</html>